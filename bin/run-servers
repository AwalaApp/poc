#!/usr/bin/env bash

set -o nounset
set -o errexit
set -o pipefail

CURRENT_DIR_PATH="$(dirname "${BASH_SOURCE}")"

# Note this is GNU Parallel, not `parallel` from moreutils
parallel --line-buffer --tag ::: \
    "${CURRENT_DIR_PATH}/user-gateway" \
    "${CURRENT_DIR_PATH}/relayer-gateway" \
    "${CURRENT_DIR_PATH}/twitter-api-adapter"
